@model List<Volunteer>
@{
    ViewData["Title"] = "View volunteer";
    Layout = "AdminMenu";
}

<link href="~/css/tableDesign.css" rel="stylesheet" />

<div class="main">
    <form>
        <h2>List of Volunteer Details</h2>
        @*<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search here" title="Type in to search...">*@
        <div class="tableDesign">
            <table id="table_id" class="content-table">
                <thead>
                    <tr class="header">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Assigned Zones</th>
                        <th>Postal Code</th>
                        <th>Zone ID</th>
                        <th>Region Code</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Volunteer vol in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => vol.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => vol.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => vol.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => vol.AssignedZones)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => vol.PostalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => vol.ZoneID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => vol.RegionCode)
                            </td>
                            <td style="font-weight: bold;">
                                <button asp-controller="Admin" asp-action="AsgnVolunteer" asp-route-id="@vol.ID" class="assignBtn">Edit Assigned Zones</button>
                                <button asp-controller="Admin" asp-action="_EditVolunteer" asp-route-id="@vol.ID" class="assignBtn">Edit Volunteer Info</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>