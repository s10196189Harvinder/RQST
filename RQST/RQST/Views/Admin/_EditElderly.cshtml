@model Elderly
@{
    Layout = "AdminMenu";
    }

<link href="~/css/editStyle.css" rel="stylesheet" />
<body>
    <form asp-action="_EditElderly" class="content-form">
        <div class="contentform">
            <div id="sendmessage"> The account has been created successfully! </div>
            @*Name, Gender, Email, Password, Address, Postal Code, Special Needs, Create*@
            <div class="top-form">
                <h2>Edit Elderly Information</h2>
            </div>
            <div class="leftcontact">
                <div class="form-group">
                    <p>Name <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="Name" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>Gender <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="Gender" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>E-mail <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="Email" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>Contact Number <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="Contact" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>Password <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="password" asp-for="Password" class="form-control-plaintext" />
                </div>
            </div>
            <div class="rightcontact">
                <div class="form-group">
                    <p>Address <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="Address" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>Postal Code <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="PostalCode" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>Special Needs <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="SpecialNeeds" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>Zone ID <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="ZoneID" class="form-control-plaintext" readonly />
                </div>
                <div class="form-group">
                    <p>Region Code <span>*</span></p>
                    <span id="icon-case"></span>
                    <input type="text" asp-for="RegionCode" class="form-control-plaintext" readonly />
                </div>
            </div>
            <input type="submit" value="Save" class="editBtn" />
        </div>
    </form>
</body>