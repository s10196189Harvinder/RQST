@model Elderly
@{
    Layout = "AdminMenu";
    }

<link href="~/css/tableDesign.css" rel="stylesheet" />

<form asp-action="_EditElderly">
    <div class="form-group row">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control-plaintext" />
    </div>
    <div class="form-group row">
        <label asp-for="Gender"></label>
        <input type="text" asp-for="Gender" class="form-control-plaintext" />
    </div>
    <div class="form-group row">
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control-plaintext" />
    </div>
    <div class="form-group row">
        <label asp-for="Password"></label>
        <input type="text" asp-for="Password" class="form-control-plaintext" />
    </div>
    <div class="form-group row">
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control-plaintext" />
    </div>
    <div class="form-group row">
        <label asp-for="PostalCode"></label>
        <input type="text" asp-for="PostalCode" class="form-control-plaintext" />
    </div>
    <div class="form-group row">
        <label asp-for="SpecialNeeds"></label>
        <input type="text" asp-for="SpecialNeeds" class="form-control-plaintext" />
    </div>

    <div class="form-group row">
        <div class="col-6 offset-5">
            <input type="submit" value="Save"
                   class="btn-lg btn-primary" />
        </div>
    </div>
</form>