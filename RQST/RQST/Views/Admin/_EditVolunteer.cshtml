@model Volunteer
@{
    Layout = "AdminMenu";
}

<link href="~/css/editStyle.css" rel="stylesheet" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<body>
    <form asp-action="_EditVolunteer" class="content-form">
        <div class="contentform">
            @*Name, Gender, Email, Password, Address, Postal Code, Special Needs, Create*@
            <div class="top-form">
                <h2>Edit Volunteer Information</h2>
            </div>
            <div class="leftcontact">
                <div class="form-group">
                    <p>Name <span>*</span></p>
                    <span class="material-icons" id="icon-case">person</span>
                    <input type="text" asp-for="Name" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>Contact <span>*</span></p>
                    <span class="material-icons" id="icon-case">phone</span>
                    <input type="text" asp-for="Contact" class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <p>Postal Code <span>*</span></p>
                    <span class="material-icons" id="icon-case">add_location_alt</span>
                    <input type="text" asp-for="PostalCode" class="form-control-plaintext readonly" readonly />
                </div>
            </div>
            <div class="rightcontact">
                <div class="form-group">
                    <p>Assigned Zones <span>*</span></p>
                    <span class="material-icons" id="icon-case">map</span>
                    <input type="text" asp-for="AssignedZones" class="form-control-plaintext readonly" readonly />
                </div>
                <div class="form-group">
                    <p>Zone ID <span>*</span></p>
                    <span class="material-icons" id="icon-case">pin_drop</span>
                    <input type="text" asp-for="ZoneID" class="form-control-plaintext readonly" readonly />
                </div>
                <div class="form-group">
                    <p>Completed Requests <span>*</span></p>
                    <span class="material-icons" id="icon-case">list_alt</span>
                    <input type="text" asp-for="CompletedRequests" class="form-control-plaintext readonly" readonly />
                </div>
            </div>
            <input type="submit" value="Save" class="editBtn" />
        </div>
    </form>
</body>