@model List<Elderly>
@{
    ViewData["Title"] = "_ViewElderly";
    Layout = "AdminMenu";
}
<link href="~/css/tableDesign.css" rel="stylesheet" />
<div class="main">
    <div class="tableDesign">
        <table id="viewInfo" class="table">
                <tr style="text-align: center">
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Postal Code</th>
                    <th>Special Needs</th>
                    <th></th>
                </tr>
            <tbody>
                @foreach (Elderly elderly in Model)
                { 
                    <tr class='table-primary' style="text-align: center">
                        <td>
                            @Html.DisplayFor(modelItem => elderly.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => elderly.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => elderly.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => elderly.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => elderly.PostalCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => elderly.SpecialNeeds)
                        </td>
                        <td style="font-weight: bold;">
                            <a asp-controller="Admin" asp-action="" asp-route-id="">Edit Elderly Info</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
